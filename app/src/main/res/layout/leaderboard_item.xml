<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/leaderboard_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/leaderboard_rank"
            android:padding="2dp"
            android:src="@drawable/ic_person_outline_black_24dp" />

        <TextView
            android:id="@+id/leaderboard_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/leaderboard_img"
            android:fontFamily="@font/open_sans_semibold"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/leaderboard_xp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderboard_username"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/leaderboard_img"
            android:fontFamily="@font/open_sans"
            android:text="TextView"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/leaderboard_rank"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>